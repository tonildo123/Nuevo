<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.sergio.nuevo.vistas.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="CONSULTA PROGRESAR"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ingrese cuil sin espacios ni barras" />

    <EditText
        android:id="@+id/etCuil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="captcha" />

    <ImageView
        android:id="@+id/ivCaptcha"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="0.09" />

    <Button
        android:id="@+id/btnactcaptcha"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableRight="@drawable/icons8_synchronize__1_"
        android:text="Actualizar Captcha" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el Captcha" />

    <EditText
        android:id="@+id/etCaptcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/bConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CUANDO Y DONDE COBRO" />

</LinearLayout>
